<style>
    .dashboard-container {
      background: #f8f9fa;
      min-height: 100vh;
      padding: 2rem;
    }

    .search-card {
      background: white;
      border-radius: 15px;
      padding: 2rem;
      box-shadow: 0 4px 6px rgba(0,0,0,0.07);
      margin-bottom: 2rem;
    }

    .user-form-card {
      background: white;
      border-radius: 15px;
      padding: 2rem;
      box-shadow: 0 4px 6px rgba(0,0,0,0.07);
      margin-bottom: 2rem;
    }

    .users-table {
      background: white;
      border-radius: 15px;
      padding: 1.5rem;
      box-shadow: 0 4px 6px rgba(0,0,0,0.07);
    }

    .custom-input {
      border: 2px solid #e9ecef;
      border-radius: 10px;
      padding: 0.75rem;
      transition: all 0.3s;
    }

    .custom-input:focus {
      border-color: #4c6ef5;
      box-shadow: none;
    }

    .btn-custom {
      border-radius: 10px;
      padding: 0.5rem 1.5rem;
      transition: all 0.3s;
    }

    .btn-delete {
      background: #ff6b6b;
      border: none;
      color: white;
    }

    .btn-delete:hover {
      background: #fa5252;
      transform: translateY(-2px);
    }

    .alert {
      border-radius: 10px;
      margin-bottom: 2rem;
    }
  </style>
</head>
<body>
  <div class="dashboard-container">
    <h1 class="mb-4">Gestion des utilisateurs</h1>

    <% if (success) { %>
      <div class="alert alert-success alert-dismissible fade show" role="alert">
        <%= success %>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
      </div>
    <% } %>

    <!-- Search Section -->
    <div class="search-card">
      <h3 class="mb-4">Recherche et filtres</h3>
      <form action="/admin/users" method="GET">
        <div class="row">
          <div class="col-md-8">
            <input type="text" class="form-control custom-input" name="search" placeholder="Rechercher un utilisateur" value="<%= search || '' %>">
          </div>
          <div class="col-md-4">
            <select class="form-control custom-input" name="filter">
              <option value="all" <%= filter === 'all' ? 'selected' : '' %>>Tous les utilisateurs</option>
              <option value="admin" <%= filter === 'admin' ? 'selected' : '' %>>Administrateurs</option>
              <option value="user" <%= filter === 'user' ? 'selected' : '' %>>Utilisateurs</option>
            </select>
          </div>
        </div>
        <button type="submit" class="btn btn-primary btn-custom mt-3">Rechercher</button>
      </form>
    </div>

    <!-- Add User Section -->
    <div class="user-form-card">
      <h3 class="mb-4">Ajouter un utilisateur</h3>
      <form action="/admin/users/add" method="POST">
        <div class="row">
          <div class="col-md-5">
            <div class="form-group mb-3">
              <label class="form-label">Nom d'utilisateur</label>
              <input type="text" class="form-control custom-input" name="username" required>
            </div>
          </div>
          <div class="col-md-5">
            <div class="form-group mb-3">
              <label class="form-label">Mot de passe</label>
              <input type="password" class="form-control custom-input" name="password" required>
            </div>
          </div>
          <div class="col-md-2">
            <div class="form-check mt-4">
              <input type="checkbox" class="form-check-input" id="isAdmin" name="isAdmin">
              <label class="form-check-label" for="isAdmin">Admin</label>
            </div>
          </div>
        </div>
        <button type="submit" class="btn btn-primary btn-custom mt-3">Ajouter</button>
      </form>
    </div>

    <!-- Users Table -->
    <div class="users-table">
      <h3 class="mb-4">Liste des utilisateurs</h3>
      <table class="table">
        <thead>
          <tr>
            <th>Utilisateur</th>
            <th>RÃ´le</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% users.forEach(user => { %>
            <tr>
              <td><strong><%= user.username %></strong></td>
              <td>
                <span class="badge <%= user.isAdmin ? 'bg-primary' : 'bg-secondary' %>">
                  <%= user.isAdmin ? 'Admin' : 'Utilisateur' %>
                </span>
              </td>
              <td>
                <form action="/admin/users/delete/<%= user._id %>" method="POST" style="display:inline;">
                  <button type="submit" class="btn btn-delete btn-custom">Supprimer</button>
                </form>
              </td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
  </div>

</body>
</html>