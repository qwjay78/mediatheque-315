
<div class="container mt-5">
    <h1 class="text-center">Profil Utilisateur</h1>
    <h2 class="text-center">Nom d'utilisateur: <%= user.username %></h2>
    <h3 class="mt-4">Documents Empruntés:</h3>
    <% if (documents.length > 0) { %>
        <ul class="list-group mt-3">
            <% documents.forEach(doc => { %>
                <li class="list-group-item">
                    <strong>Titre:</strong> <%= doc.fields.titre_avec_lien_vers_le_catalogue %> <br />
                    <strong>Auteur:</strong> <%= doc.fields.auteur %> <br />
                    <form action="/documents/return/<%= doc._id %>" method="POST" class="mt-2">
                        <button type="submit" class="btn btn-danger">Retourner</button>
                    </form>
                </li>
            <% }) %>
        </ul>
    <% } else { %>
        <p class="mt-3">Vous n'avez emprunté aucun document.</p>
    <% } %>
    <p class="mt-3">Il vous reste <%= remainingBorrows %> livres à emprunter.</p>
    <% if (remainingBorrows === 0) { %>
        <p class="text-danger">Vous avez atteint la limite de 5 livres empruntés.</p>
    <% } %>
    <a href="/documents" class="btn btn-primary mt-3">Voir les documents</a>
</div>