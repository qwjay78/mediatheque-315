<!DOCTYPE html>
<html lang="fr">
<head>
  <style>
    body {
      background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
      min-height: 100vh;
    }
    .login-container {
      background: white;
      border-radius: 20px;
      box-shadow: 0 8px 20px rgba(0,0,0,0.1);
      padding: 2rem;
      margin-top: 2rem;
    }
    .title-main {
      color: #2c3e50;
      font-weight: 700;
      font-size: 2.5rem;
      margin-bottom: 2rem;
    }
    .title-section {
      color: #34495e;
      font-size: 1.5rem;
      font-weight: 600;
    }
    .custom-input {
      border: 2px solid #e9ecef;
      border-radius: 10px;
      padding: 12px;
      transition: all 0.3s;
    }
    .custom-input:focus {
      border-color: #4c6ef5;
      box-shadow: 0 0 0 0.2rem rgba(76,110,245,0.25);
    }
    .btn-custom {
      background: #4c6ef5;
      border: none;
      border-radius: 10px;
      padding: 12px 30px;
      font-weight: 500;
      transition: all 0.3s;
      width: 100%;
    }
    .btn-custom:hover {
      background: #364fc7;
      transform: translateY(-2px);
    }
    .separator {
      border-left: 2px solid #e9ecef;
      height: 100%;
    }
    .link-custom {
      color: #4c6ef5;
      text-decoration: none;
      transition: all 0.3s;
    }
    .link-custom:hover {
      color: #364fc7;
      text-decoration: underline;
    }
  </style>
</head>
<body>
  <div class="container mt-5">
    <h1 class="text-center title-main">Bienvenue à la Médiathèque</h1>
    
    <div class="row justify-content-center">
      <div class="col-md-10">
        <div class="login-container">
          <div class="row">
            <!-- User Login Section -->
            <div class="col-md-6">
              <h2 class="text-center title-section mb-4">Connexion Utilisateur</h2>
              <% if (typeof error !== 'undefined' && error) { %>
                <div class="alert alert-danger" role="alert">
                  <%= error %>
                </div>
              <% } %>
              <form action="/auth/login" method="POST">
                <div class="mb-4">
                  <label for="username" class="form-label">Nom d'utilisateur</label>
                  <input type="text" class="form-control custom-input" id="username" name="username" required>
                </div>
                <div class="mb-4">
                  <label for="password" class="form-label">Mot de passe</label>
                  <input type="password" class="form-control custom-input" id="password" name="password" required>
                </div>
                <button type="submit" class="btn btn-custom">Se connecter</button>
                <div class="mt-3 text-center">
                  <p>Pas encore de compte ? <a href="/auth/register" class="link-custom">Inscrivez-vous ici</a></p>
                </div>
              </form>
            </div>

            <!-- Vertical Separator -->
            <div class="col-md-1 d-none d-md-block">
              <div class="separator"></div>
            </div>

            <!-- Admin Login Section -->
            <div class="col-md-5">
              <h2 class="text-center title-section mb-4">Administration</h2>
              <form action="/auth/login" method="POST">
                <div class="mb-4">
                  <label for="adminUsername" class="form-label">Identifiant Admin</label>
                  <input type="text" class="form-control custom-input" id="adminUsername" name="username" required>
                </div>
                <div class="mb-4">
                  <label for="adminPassword" class="form-label">Mot de passe</label>
                  <input type="password" class="form-control custom-input" id="adminPassword" name="password" required>
                </div>
                <button type="submit" class="btn btn-custom">Accès Admin</button>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

</body>
</html>